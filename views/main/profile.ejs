<!DOCTYPE html>
<html>
<head>
<title>My Profile</title>
<base href="/profile/">
<% include ../partials/main_header %>
<script src="/mod/angular-route/angular-route.min.js"></script>
<script src="/javascripts/ProfileCtrls.js"></script>
<style>
	.profile-btns {
		
	}
	.profile-basic-info {
		padding: 2% 0;
	}
</style>
</head>
<body ng-app="profile">
	<% include ../partials/main_navbar %>
	<div class="container">
		<div class="col-sm-6 col-sm-offset-3">
			<h1>
				My Profile
			</h1>
			<% if(errMsg.length > 0){ %>
				<div class="alert alert-danger">
					<%= errMsg %>
				</div>
			<% } if(infoMsg.length > 0){ %>
				<div class="alert alert-info">
					<%= infoMsg %>
				</div>	
			<% } if(sucMsg.length > 0){ %>
				<div class="alert alert-success">
					<%= sucMsg %>
				</div>
			<% } %>
			<div>
				<div class="profile-btns">
					<a class="btn btn-default" href="basic_info">
						<i class="fa fa-user"></i>&nbsp;
						Basic Info
					</a>
					<a class="btn btn-primary" href="edit">
						<i class="fa fa-cog"></i>&nbsp;
						Edit My Details
					</a>
					<a class="btn btn-info" href="edit/pw">
						<i class="fa fa-key"></i>&nbsp;
						Change My Password
					</a>
					<a class="btn btn-danger" href="delete">
						<i class="fa fa-trash"></i>&nbsp;
						Delete My Profile
					</a>
				</div>
			</div>
		</div>
	</div>
</body>
</html>