<!DOCTYPE html>
<html>
<head>
<title>Forgotten Password?</title>
<% include ../partials/auth_header %>
</head>
<body ng-app="auth">
	<div class="container">
		<div class="col-sm-6 col-sm-offset-3">
			<h1>
				Reset Password
			</h1>
			<% if(errMsg.length > 0){ %>
				<div class="alert alert-danger">
					<%= errMsg %>
				</div>
			<% } %>			
			<% if(sucMsg.length > 0){ %>
				<div class="alert alert-success">
					<%= sucMsg %>
				</div>
			<% } %>
			<form action="forgot" method="post" name="resForm">
				<div class="form-group">
					<label>
						Email
					</label>
					<input type="email" class="form-control" name="email" required autofocus>
				</div>
				<input type="submit" class="btn btn-warning btn-lg" ng-disabled="resForm.$invalid" value="Reset Password">
			</form>
			<hr>
			<p>
				Return to login page?&nbsp;
				<a href="login">
					Login
				</a>
			</p>
		</div>
	</div>
</body>
</html>